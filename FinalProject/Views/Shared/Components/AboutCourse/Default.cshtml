@model HomeVM


<!-- About Start -->
<div class="about-area pb-135 pt-130 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw(@Model.Abouts.Title)</h2>
                    <p>@Model.Abouts.Description</p>
                    <a class="default-btn" asp-action="Index" asp-controller="Course">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.Abouts.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->