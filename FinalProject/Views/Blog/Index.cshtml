@using System.Globalization
@model List<Blog>

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search blogs</h3>
                </div>
                <div class="course-form" id="search-box-blog">
                    <form id="search">
                        <input type="text" id="blog-search" placeholder="Search..." name="search" />
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <h2 style="font-size:xx-large;" class="mb-50">All Blogs</h2>
            @foreach (Blog blog in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12" style="width: 400px; height: 450px;">
                    <div class="single-blog mb-60">
                        <div class="blog-img">
                            <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id><img style="width: 370px; height: 250px;" src="~/img/blog/@blog.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>@blog.Writer  /  @blog.CreateTime.ToString("MMMM d, yyyy", CultureInfo.InvariantCulture)  /  <i class="fa fa-comments-o"></i> @blog.CommentCount</p>
                            </div>
                            <div class="blog-bottom" style="width: 370px; height: 138px;">
                                <h2><a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id>@blog.Title </a></h2>
                                <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id>read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Pagination start -->
        <div class="row d-flex" style="padding-left: 35%;">
            <ul class="pagination">
                @if (ViewBag.CurrentPage == 1)
                {
                    <li class="page-item disabled ">
                        <a class="page-link " tabindex="-1">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item ">
                        <a class="page-link" asp-action="Index" asp-route-page=@(ViewBag.CurrentPage - 1) tabindex="-1">Previous</a>
                    </li>
                }
                @for (var i = 1; i <= ViewBag.PageCount; i++)
                {
                    @if (ViewBag.CurrentPage == i)
                    {
                        <li class="page-item active"> <a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page=@i>@i</a></li>
                    }
                }
                @if (ViewBag.CurrentPage == ViewBag.PageCount)
                {
                    <li class="page-item disabled">
                        <a class="page-link">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page=@(ViewBag.CurrentPage + 1)>Next</a>
                    </li>
                }
            </ul>
        </div>
        <!-- Pagination end -->
    </div>
</div>

<!-- Blog End -->
