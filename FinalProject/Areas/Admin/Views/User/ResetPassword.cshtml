@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3>Please enter current and new password</h3>
                <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
                <div class="col-lg-6"> 
                    <form method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Password"></label>
                        <input class="form-control" asp-for="@Model.Password">
                        <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RepeatPassword">New password</label>
                        <input class="form-control" asp-for="@Model.RepeatPassword">
                        <span asp-validation-for="@Model.RepeatPassword" class="form-text text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-info">Submit</button>
                    <a asp-action="Index" class="btn btn-info">Go Back</a>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

