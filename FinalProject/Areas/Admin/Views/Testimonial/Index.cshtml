@model List<Testimonial>

<div class="card">
    <div class="card-body">
        <h1 class="card-title text-warning">Testimonial </h1>
        <div>
            <a asp-action="Create" class="btn btn-lg btn-block btn-success text-light pb-20"><i class="fas fa-plus"></i> Add testimonial</a>
        </div>

        <div class="table-responsive">
            <table id="zero_config" class="table  table-striped table-bordered">
                <thead class="bg-warning text-white">
                    <tr>
                        <th><h3>Photo</h3> </th> 
                        <th><h3>Student name</h3> </th>                                               
                        <th><h3>Response</h3> </th>                                               
                        <th><h3>Status</h3> </th>
                        <th><h3>Settings</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Testimonial testimonial in Model)
                    {
                        <tr>
                            <td><img style="width: 120px; height: 80px;" src="~/img/testimonial/@testimonial.Image" ></td>
                            <td>@testimonial.StudentName </td>
                            <td> @Html.Raw(@testimonial.Response.Substring(0, 10)) ...</td>
                            <td>
                                @if (@testimonial.IsDeactive)
                                {
                                    <a class="text-danger">Deactive</a>
                                }
                                else
                                {
                                    <a class="text-success">Activate</a>
                                }
                            </td>
                            <td>
                                <a asp-action="Info" asp-route-id=@testimonial.Id class="btn btn-info text-light">Info</a>
                                <a asp-action="Update" asp-route-id=@testimonial.Id class="btn btn-warning text-light">Update</a>
                                @if (@testimonial.IsDeactive)
                                {
                                    <a class="btn btn-success" asp-action="Activate" asp-route-id="@testimonial.Id">Activate</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@testimonial.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
