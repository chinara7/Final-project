@model List<Slider>



<div class="card">
    <div class="card-body">
        <h1 class="card-title text-info">Sliders</h1>
        <div>
            <a asp-action="Create" class="btn btn-lg btn-block btn-success text-light pb-20"><i class="fas fa-plus"></i> Add slider</a>
        </div>

        <div class="table-responsive">
            <table id="zero_config" class="table  table-striped table-bordered">
                <thead class="bg-info text-white">
                    <tr>
                        <th><h3>Slider image</h3> </th>
                        <th><h3>Photo</h3> </th>
                        <th><h3>Title</h3> </th>
                        <th><h3>Status</h3> </th>
                        <th><h3>Settings</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Slider slider in Model)
                    {
                        <tr>
                            <td><img style="width: 120px; height: 80px;" src="~/img/slider/@slider.SliderImage" ></td>
                            <td><img style="width: 120px; height: 80px;" src="~/img/slider/@slider.Image" ></td>
                            <td>@Html.Raw(@slider.Title)</td>
                            <td>
                                @if (@slider.IsDeactive)
                                {
                                    <a class="text-danger">Deactive</a>
                                }
                                else
                                {
                                    <a class="text-success">Activate</a>
                                }
                            </td>
                            <td>
                                <a asp-action="Info" asp-route-id=@slider.Id class="btn btn-info text-light">Info</a>
                                <a asp-action="Update" asp-route-id=@slider.Id class="btn btn-warning text-light">Update</a>
                                @if (@slider.IsDeactive)
                                {
                                    <a class="btn btn-success" asp-action="Activate" asp-route-id="@slider.Id">Activate</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
