@model List<Blog>
@using System.Globalization



@foreach (Blog blog in Model)
{
        <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="single-blog mb-60">
                <div class="blog-img">
                    <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id><img src="~/img/blog/@blog.Image" alt="blog"></a>
                    <div class="blog-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </div>
                <div class="blog-content">
                    <div class="blog-top">
                        <p>@blog.Writer  /  @blog.CreateTime.ToString("MMMM d, yyyy", CultureInfo.InvariantCulture)  /  <i class="fa fa-comments-o"></i> @blog.CommentCount</p>
                    </div>
                    <div class="blog-bottom" style="width: 370px; height: 138px;">
                        <h2><a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id>@blog.Title </a></h2>
                        <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id=@blog.Id>read more</a>
                    </div>
                </div>
            </div>
        </div>
}
