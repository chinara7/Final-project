@model List<Blog>


<div class="card">
    <div class="card-body">
        <h1 class="card-title text-success">Active blogs</h1>
        <div class="table-responsive">
            <table id="zero_config" class="table  table-striped table-bordered">
                <thead class="bg-success text-white">
                    <tr>
                        <th><h3>Cover</h3> </th>
                        <th><h3>Blog title</h3> </th>
                        <th><h3>Writer </h3> </th>
                        <th><h3>Settings</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Blog blog in Model)
                    {
                        <tr>
                            <td><img style="width: 120px; height: 80px;" src="~/img/blog/@blog.Image" ></td>
                            <td>@blog.Title</td>
                            <td> @blog.Writer</td>
                            <td>
                                <a asp-action="Info" asp-route-id=@blog.Id class="btn btn-info text-light">Info</a>
                                <a asp-action="Update" asp-route-id=@blog.Id class="btn btn-warning text-light">Update</a>
                                <a asp-action="Delete" asp-route-id=@blog.Id class="btn btn-danger text-light">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>