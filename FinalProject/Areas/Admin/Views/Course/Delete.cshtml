@model Course
@{
    ViewData["Title"] = "Delete";
}

<div class="card-body">
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-action="Info" asp-controller="Course" asp-route-id=@Model.Id>
                    <img style="width: 360px; height: 260px;" src="~/img/course/@Model.Image" alt="course">                   
                </a>
            </div>
            <div class="course-content">
                <h3><a asp-action="Info" asp-controller="Course" asp-route-id=@Model.Id>@Model.Title</a></h3>
                <p>@Model.SubTitle</p>
                <a class="btn btn-info" asp-action="Info" asp-controller="Course" asp-route-id=@Model.Id>read more</a>
            </div>
        </div>
    </div>
    <form method="post">
        <h3 class="text-danger">Do you want to deactivate a course called - @Model.Title?</h3>
        <button type="submit" class="btn btn-danger ">Yes</button>
        <a asp-action="Index" class="btn btn-info">Go Back</a>
    </form>
</div>