@model Teacher 
@{
    ViewData["Title"] = "Info";
}
<br /><br /><br /><br />
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img style="width: 270px; height: 270px;" src="~/img/teacher/@Model.Image" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.FullName</h2>
                    @foreach (TeacherTeacherProfession t in Model.teacherTeacherProfessions)
                   {
                       <span>@t.TeacherProfession.Name</span>
                   }
                    <h4>ABOUT ME</h4>
                    <p>@Model.TeacherDetail.About</p>
                    <ul>
                        <li><span>degree: </span>@Model.TeacherDetail.SpecialtyDegree</li>
                        <li><span>experience: </span>@Model.TeacherDetail.WorkExperience</li>
                        <li><span>hobbies: </span>@Model.TeacherDetail.Hobbies</li>
                        <li><span>faculty: </span>@Model.TeacherDetail.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.TeacherDetail.MailAddress</p>
                    <p><span>make a call : </span>@Model.TeacherDetail.PhoneNumber</p>
                    <p><span>skype : </span> @Model.TeacherDetail.SkypeName</p>
                    <ul>
                        <li><a href="@Model.FacebookLink"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="@Model.PinterestLink"><i class="fab fa-pinterest-p"></i></a></li>
                        <li><a href="@Model.VimeoLink"><i class="fab fa-vimeo-v"></i></a></li>
                        <li><a href="@Model.TwitterLink"><i class="fab fa-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>language</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.Language%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>team leader</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.TeamLeader%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>development</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.Development%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>design</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.Design%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>innovation</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.Innovation%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>communication</span>
                                <div class="progress">
                                    <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.TeacherDetail.Communication%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar bg-info wow fadeInLeft">
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
