@model List<Course>


     @if (User.IsInRole("Moderator"))
{
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-primary">Courses</h1>            
            <div class="table-responsive">
                <table id="zero_config" class="table  table-striped table-bordered">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th><h3>Cover</h3> </th>
                            <th><h3>Course Name</h3> </th>
                            <th><h3>Status</h3> </th>
                            <th><h3>Settings</h3></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Course course in Model)
                        {
                            <tr>
                                <td><img style="width: 120px; height: 80px;" src="~/img/course/@course.Image" alt="course"></td>
                                <td>@course.Title</td>
                                <td>
                                    @if (@course.IsDeactive)
                                    {
                                        <a class="text-danger">Deactive</a>
                                    }
                                    else
                                    {
                                        <a class="text-success">Activate</a>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Info" asp-route-id=@course.Id class="btn btn-info text-light">Info</a>
                                    <a asp-action="Update" asp-route-id=@course.Id class="btn btn-warning text-light">Update</a>                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
    <div class="card-body">
        <h1 class="card-title text-primary">Courses</h1>
        <div>
            <a asp-action="Create" class="btn btn-lg btn-block btn-success text-light pb-20"><i class="fas fa-plus"></i> Add course</a>
        </div>

        <div class="table-responsive">
            <table id="zero_config" class="table  table-striped table-bordered">
                <thead class="bg-primary text-white">
                    <tr>
                        <th><h3>Cover</h3> </th>
                        <th><h3>Course Name</h3> </th>
                        <th><h3>Status</h3> </th>
                        <th><h3>Settings</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Course course in Model)
                    {
                        <tr>
                            <td><img style="width: 120px; height: 80px;" src="~/img/course/@course.Image" alt="course"></td>
                            <td>@course.Title</td>
                            <td>
                                @if (@course.IsDeactive)
                                {
                                    <a class="text-danger">Deactive</a>
                                }
                                else
                                {
                                    <a class="text-success">Activate</a>
                                }
                            </td>
                            <td>
                                <a asp-action="Info" asp-route-id=@course.Id class="btn btn-info text-light">Info</a>
                                <a asp-action="Update" asp-route-id=@course.Id class="btn btn-warning text-light">Update</a>
                                @if (@course.IsDeactive)
                                {
                                    <a class="btn btn-success" asp-action="Activate" asp-route-id="@course.Id">Activate</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
