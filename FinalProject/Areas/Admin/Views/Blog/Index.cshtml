@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <h1 class="card-title text-secondary">Blogs</h1>
        <div >
            <a asp-action="Create" class="btn btn-lg btn-block btn-success text-light pb-20"><i class="fas fa-plus"></i> Add blog</a>
        </div>
        <div class="table-responsive">
            <table id="zero_config" class="table  table-striped table-bordered">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th><h3>Image</h3> </th>
                        <th><h3>Blog title</h3> </th>
                        <th><h3>Writer </h3> </th>
                        <th><h3>Status</h3> </th>
                        <th><h3>Settings</h3></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Blog blog in Model)
                    {
                        <tr>
                            <td><img style="width: 100px; height: 110px;" src="~/img/blog/@blog.Image"></td>
                            <td>@blog.Title</td>
                            <td> @blog.Writer</td>
                            <td>
                                @if (@blog.IsDeactive)
                                {
                                    <a class="text-danger" >Deactive</a>
                                }
                                else
                                {
                                    <a class="text-success" >Activate</a>
                                }
                            </td>
                            <td>                                
                                <a asp-action="Info" asp-route-id=@blog.Id class="btn btn-info text-light">Info</a>
                                <a asp-action="Update" asp-route-id=@blog.Id class="btn btn-warning text-light">Update</a>
                                @if (@blog.IsDeactive)
                                {
                                    <a class="btn btn-success" asp-action="Activate" asp-route-id="@blog.Id">Activate</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@blog.Id">Delete</a>                                    
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
