@model List<Teacher>

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search teachers</h3>
                </div>
                <div class="course-form" id="search-box-teacher">
                    <form id="search">
                        <input type="text" id="teacher-search" placeholder="Search..." name="search" />
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <h2 style="font-size:xx-large;" class="mb-50">All Teachers</h2>
            @foreach (Teacher teacher in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45" style="width: 270px; height: 300px;">
                        <div class="single-teacher-img" style="width: 270px; height: 270px;">
                            <a asp-action="TeacherDetail" asp-controller="Teacher" asp-route-id=@teacher.Id><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-action="TeacherDetail" asp-controller="Teacher" asp-route-id=@teacher.Id></a>@teacher.FullName</h2>
                            @foreach (TeacherTeacherProfession teacherTeacherProfession in teacher.teacherTeacherProfessions)
                            {
                                <span>@teacherTeacherProfession.TeacherProfession.Name  </span>
                            }
                            <ul>
                                <li><a href="@teacher.FacebookLink"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.PinterestLink"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@teacher.VimeoLink"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@teacher.TwitterLink"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
